<% render partial: "layouts/errors", locals: {object: @review} %>

<h1>Write a new review!</h1>
  <%= form_for @review do |f|%>
  <% if @book %>
  <% f.hidden_field :book_id, value: @book.id %>
  <% else %>
   <div>
   <%= f.label :book_id, "Pick a Title" %>
   <%= f.collection_select :book_id, Book.all, :id, :title, include_blank: 'Select One' %>
   </div>
  <% end %>

    <p>Write your review!</p>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %><br>
    </div>

   <div>
   <%= f.label :comment %>
   <%= f.text_area :comment %>
  </div>


  <%= f.submit "Submit!" %><br>
<% end %>